@model CRM.Pages.AssetTypes.CreateModel
@{
    Layout = "_Layout";
}
<div class="card m-3 border-light">
    <h3 class="card-header text-center font-weight-bold text-uppercase py-4">@(Model.AssetTypes.Id != 0 ? "Edit" : "Create") Asset Types</h3>
    <br />
    <div class="card-body">
        <form method="post">
            @if (Model.AssetTypes.Id != 0)
            {
                <input type="hidden" asp-for="AssetTypes.Id" />
            }
            <div class=" text-danger" asp-validation-summary="ModelOnly"></div>
            <div class=" form-group row">
                <div class=" col-2 offset-2">
                    <label asp-for="AssetTypes.Name">Asset Name<span class="text-danger">*</span></label>
                </div>
                <div class=" col-6">
                    <input asp-for="AssetTypes.Name" class="form-control" id="AssetName" required />
                </div>
            </div>
            <div class="form-group row m-2">
                <div class=" offset-4">
                    <span asp-validation-for="AssetTypes.Name" class="text-danger"></span>
                </div>
            </div>

          
            <div class=" form-group row mt-3">
                <div class="col-3 offset-3">
                    <button type="submit" id="btnAssetTypesSubmit" class="btn btn-primary form-control">@(Model.AssetTypes.Id != 0 ? "Update" : "Create")</button>

                </div>
                <div class=" col-3">
                    <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

