@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CRM.Pages.Login.IndexModel

@{
   Layout="_LoginLayout";
}

<div class="row justify-content-center m-5">
    <div class="col-md-4">
        <div class="card card-outline-secondary">
            <h3 class="card-header font-weight-bold mb-0">Login</h3>
            <div class="card-body">
                <form id="account" method="post">
                    <input type="hidden" name="hdnRedirectUrl" value="@ViewBag.ReturnUrl" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName">Username <span class="text-danger">*</span></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Password <span class="text-danger">*</span></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


