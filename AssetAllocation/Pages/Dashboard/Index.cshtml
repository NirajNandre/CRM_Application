@page
@*@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor*@
@model CRM.Pages.Dashboard.IndexModel
@{
    Layout = "_Layout";
}

<!--Welcome Message -->
<div class="card mb-3">
    <div class="card-body">
        <h3>Hello, @ViewBag.LoggedUser!</h3>
    </div>
</div>
<!--Multiple Page Links -->
<div class="row row-cols-4 mb-4">
    @if (ViewBag.LoggedUserRole == CRM.Models.UserRoles.SuperAdmin)
    {
        <div class="col">
            <a href="/Users/Index">
                <div class="card text-white bg-info o-hidden h-100">
                    <div class="card-body">
                        <div class="mr-5">Manage Users</div>
                    </div>
                    <div class="card-footer clearfix small z-1">
                        <span class="float-left">User List</span>
                        <span class="float-right">
                            <i class="fa fa-angle-right"></i>
                        </span>
                    </div>
                </div>
            </a>
        </div>
    }
    <div class="col">
        <a href="/EmployeeMaster/Index">
            <div class="card text-white bg-info o-hidden h-100">
                <div class="card-body">
                    <div class="mr-5">Manage Employees</div>
                </div>
                <div class="card-footer clearfix small z-1">
                    <span class="float-left">Employee List</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a href="/AssetTypes/Index">
            <div class="card text-white bg-info o-hidden h-100">
                <div class="card-body">
                    <div class="mr-5">Manage Asset Types</div>
                </div>
                <div class="card-footer clearfix small z-1">
                    <span class="float-left">Asset Type List</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a href="/AssetMaster/Index">
            <div class="card text-white bg-info o-hidden h-100">
                <div class="card-body">
                    <div class="mr-5">Manage Assets</div>
                </div>
                <div class="card-footer clearfix small z-1">
                    <span class="float-left">Assets List</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
</div>

<div class="row row-cols-4 mb-4">

    <div class="col">
        <a href="/AssetAllocation/Index">
            <div class="card text-white bg-info o-hidden h-100">
                <div class="card-body">
                    <div class="mr-5">Allocate Assets</div>
                </div>
                <div class="card-footer clearfix small z-1">
                    <span class="float-left">Asset Allocation List</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <a href = "/Leave/Index">
            <div class="card text-white bg-info o-hidden h-100">
                <div class="card-body">
                    <div class="mr-5">Manage Leaves </div>
                </div>
                <div class="card-footer clearfix small z-1">
                    <span class="float-left">Leave List</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </div>
            </div>
        </a>
    </div>
    @if (ViewBag.LoggedUserRole == CRM.Models.UserRoles.SuperAdmin)
    {
        <div class="col">
            <a href="/SalaryMaster/Index">
                <div class="card text-white bg-info o-hidden h-100">
                    <div class="card-body">
                        <div class="mr-5">Manage Salary</div>
                    </div>
                    <div class="card-footer clearfix small z-1">
                        <span class="float-left">Salary Details</span>
                        <span class="float-right">
                            <i class="fa fa-angle-right"></i>
                        </span>
                    </div>
                </div>
            </a>
        </div>
    }
</div>


